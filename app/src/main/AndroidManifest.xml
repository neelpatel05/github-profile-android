<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xyz.neelpatel.githubprofile">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.xyz.neelpatel.githubprofile.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.xyz.neelpatel.githubprofile.DisplayActivity"
            android:parentActivityName="com.xyz.neelpatel.githubprofile.MainActivity" />
        <activity
            android:name="com.xyz.neelpatel.githubprofile.RepositoryActivity"
            android:label="Repository"
            android:parentActivityName="com.xyz.neelpatel.githubprofile.MainActivity" />
        <activity android:name="com.xyz.neelpatel.githubprofile.FollowersActivity"
            android:label="Followers"
            android:parentActivityName="com.xyz.neelpatel.githubprofile.MainActivity" />
        <activity android:name="com.xyz.neelpatel.githubprofile.FollowingActivity"
            android:label="Following"
            android:parentActivityName="com.xyz.neelpatel.githubprofile.MainActivity" />
        <activity android:name="com.xyz.neelpatel.githubprofile.GistsActivity"
            android:label="Gists"
            android:parentActivityName="com.xyz.neelpatel.githubprofile.MainActivity" />
        <activity android:name="com.xyz.neelpatel.githubprofile.EventsActivity"
            android:label="Events"
            android:parentActivityName="com.xyz.neelpatel.githubprofile.MainActivity" />
        <activity android:name="com.xyz.neelpatel.githubprofile.OrganizationsActivity"
            android:label="Organizations"
            android:parentActivityName="com.xyz.neelpatel.githubprofile.MainActivity" />
    </application>

</manifest>